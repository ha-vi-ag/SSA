    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-center">
                        <h4 id="heading">Test Yourself</h4>
                    </div>
                    <div class="card-body">
                        <form id="form">
                            <div id="questionList">
                                <div class="form-group question-item">
                                    <label for="question1">Question 1:</label>
                                    <input type="text" required class="form-control" id="question1"
                                        placeholder="Enter your question">
                                    <label for="answer1" class="mt-2">Answer:</label>
                                    <textarea required class="form-control" id="answer1" rows="3"
                                        placeholder="Write your answer here..."></textarea>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-secondary mt-3" id="addQuestion">
                                    <i class="fas fa-plus-circle"></i> Add
                                </button>
                                <button type="submit" class="btn btn-primary mt-3">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

